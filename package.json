{
  "name": "diploma-tools",
  "version": "1.0.0",
  "description": "Tools for diploma project validation and optimization",
  "main": "index.js",
  "scripts": {
    "sync": "node utils/sync.js",
    "validate": "node utils/validate/index.js",
    "validate:html": "node -e \"require('./utils/validate/html')().then(errors => { console.log(errors.join('\\n')); process.exit(errors.length > 0 ? 1 : 0); })\"",
    "validate:bem": "node -e \"require('./utils/validate/bem')().then(errors => { console.log(errors.join('\\n')); process.exit(errors.length > 0 ? 1 : 0); })\"",
    "validate:styles": "node -e \"require('./utils/validate/styles')().then(errors => { console.log(errors.join('\\n')); process.exit(errors.length > 0 ? 1 : 0); })\"",
    "validate:images": "node -e \"require('./utils/validate/images')().then(errors => { console.log(errors.join('\\n')); process.exit(errors.length > 0 ? 1 : 0); })\"",
    "validate:structure": "node -e \"require('./utils/validate/structure')().then(errors => { console.log(errors.join('\\n')); process.exit(errors.length > 0 ? 1 : 0); })\"",
    "optimize:html": "node utils/optimize/html.js",
    "optimize:styles": "node utils/optimize/styles.js",
    "optimize:images": "node utils/optimize/images.js",
    "optimize": "yarn optimize:html && yarn optimize:styles && yarn optimize:images",
    "sass": "node -e \"const { WORKING_DIR } = require('./utils/paths'); require('child_process').execSync(`sass ${WORKING_DIR}/styles/style.scss ${WORKING_DIR}/assets/styles/style.css && cleancss -o ${WORKING_DIR}/assets/styles/style.min.css ${WORKING_DIR}/assets/styles/style.css && cleancss -o ${WORKING_DIR}/assets/styles/normalize.min.css ${WORKING_DIR}/styles/normalize.css`, {stdio: 'inherit'})\"",
    "sass:watch": "node -e \"const { WORKING_DIR } = require('./utils/paths'); const path = require('path'); process.chdir(WORKING_DIR); require('child_process').spawn('sass', ['--watch', 'styles/style.scss', 'assets/styles/style.css'], {stdio: 'inherit'})\"",
    "format:styles": "node -e \"const { WORKING_DIR } = require('./utils/paths'); require('child_process').execSync(`stylelint \\\"${WORKING_DIR}/styles/**/*.scss\\\" --fix --config .stylelintrc.json`, {stdio: 'inherit'})\"",
    "start": "concurrently \"yarn sass:watch\" \"node utils/server.js\"",
    "format": "node -e \"const { WORKING_DIR } = require('./utils/paths'); require('child_process').execSync(`prettier --write \\\"${WORKING_DIR}/styles/**/*.scss\\\"`, {stdio: 'inherit'})\"",
    "setup-git": "node utils/setup-git-hooks.js",
    "cleanup": "node utils/cleanup-repo.js"
  },
  "dependencies": {
    "browser-sync": "^2.29.3",
    "clean-css": "^5.3.2",
    "clean-css-cli": "^5.6.3",
    "concurrently": "^9.1.2",
    "connect-livereload": "^0.6.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "jsdom": "^25.0.1",
    "livereload": "^0.9.3",
    "normalize.css": "^8.0.1",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "sharp": "^0.33.1",
    "svg-sprite": "^2.0.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "html-validator": "^6.0.1",
    "postcss": "^8.4.49",
    "stylelint": "^16.12.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-order": "^6.0.4"
  }
}
